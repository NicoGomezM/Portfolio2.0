<div id="popupAbout" class="popup-overlay">
    <div class="popup-content">
        <section class="bg-white/80 p-4 rounded-lg shadow-lg justify-center">
            <h2>Acerca de</h2>
            <p>Este es el contenido del pop-up para la sección "Acerca de".</p>
            <button id="closePopupAbout" class="popup-close px-8 py-2 rounded-md bg-teal-500 text-white font-bold transition duration-200 hover:bg-white hover:text-black border-2 border-transparent hover:border-teal-500">
                <p data-key="closeBut">Cerrar</p>
            </button>
        </section>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const closePopupButton = document.getElementById("closePopupAbout");
    const popup = document.getElementById("popupAbout");

    // Verifica que los elementos existan antes de agregar eventos
    if (closePopupButton && popup) {
        // Ocultar el pop-up al hacer clic en el botón "Cerrar"
        closePopupButton.addEventListener("click", () => {
            popup.style.display = "none";
        });

        // Cerrar el pop-up al hacer clic fuera del contenido
        popup.addEventListener("click", (event) => {
            if (event.target === popup) {
                popup.style.display = "none";
            }
        });
    } else {
        console.error("El pop-up o el botón de cierre no se encontraron en el DOM.");
    }
});
</script>

<style>
    @import '../styles/popupStyles.css';
</style>