<style>
    @import '../styles/popupStyles.css';
</style>

<div id="popupCV" class="popup-overlay">
    <div class="popup-content">
        <section class="bg-white/80 p-4 rounded-lg shadow-lg justify-center">
            <h2 class="text-black font-bold" data-key="curriculum">Currículum Vitae</h2>

            <iframe 
                src="src/utils/CV.pdf" 
                class="w-full h-130 border rounded-lg" 
                frameborder="10">
            </iframe>

            <button id="closePopupCV" class="popup-close px-8 py-2 rounded-md bg-teal-500 text-white font-bold transition duration-200 hover:bg-white hover:text-black border-2 border-transparent hover:border-teal-500">
                <p data-key="closeBut">Cerrar</p>
            </button>
        </section>
    </div>
</div>

<script>

    import traduction from '../utils/traductions.js'

    document.addEventListener("DOMContentLoaded", () => {
        const translations = {
            es: {
                curriculum: "Currículum Vitae",
                closeBut: "Cerrar",
            },
            en: {
                curriculum: "Curriculum Vitae",
                closeBut: "Close",
            },
            ja: {
                curriculum: "履歴書",
                closeBut: "閉じる",
            }
        };

        setTimeout(() => {
            traduction(translations);
        }, 100);

        const closePopupButton = document.getElementById("closePopupCV");
        const popup = document.getElementById("popupCV");

        if (closePopupButton && popup) {
            closePopupButton.addEventListener("click", () => {
                popup.style.display = "none";
            });

            popup.addEventListener("click", (event) => {
                if (event.target === popup) {
                    popup.style.display = "none";
                }
            });
        }
    });
</script>
